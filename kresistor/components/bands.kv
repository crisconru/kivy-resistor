            on_press: first_dropdown.select(self.background_color)
            on_release: first_band.change_value(4)
        DropButton:
            id: btn_green
            background_color: first_band.green
            on_press: first_dropdown.select(self.background_color)
            on_release: first_band.change_value(5)
        DropButton:
            id: btn_blue
            background_color: first_band.blue
            on_press: first_dropdown.select(self.background_color)
            on_release: first_band.change_value(6)
        DropButton:
            id: btn_violet
            background_color: first_band.violet
            on_press: first_dropdown.select(self.background_color)
            on_release: first_band.change_value(7)
        DropButton:
            id: btn_grey
            background_color: first_band.grey
            on_press: first_dropdown.select(self.background_color)
            on_release: first_band.change_value(8)
        DropButton:
            id: btn_white
            background_color: first_band.white
            on_press: first_dropdown.select(self.background_color)
            on_release: first_band.change_value(9)
