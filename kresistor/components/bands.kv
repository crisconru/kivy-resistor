#:kivy 1.0.0

<ColorButton@Button>:
    background_normal: ''

<DropButton@ColorButton>:
    size_hint_y: None
    height: '48dp'

<FirstBand>:
    id: first_band
    ColorButton:
        id: first_btn
        on_release: first_dropdown.open(self)
    DropDown:
        id: first_dropdown
        on_select: first_band.change_value(args[1])
        DropButton:
            id: first_btn_brown
            background_color: first_band.brown
            on_release: first_dropdown.select(1)
        DropButton:
            id: first_btn_red
            background_color: first_band.red
            on_release: first_dropdown.select(2)
        DropButton:
            id: first_btn_orange
            background_color: first_band.orange
            on_release: first_dropdown.select(3)
        DropButton:
            id: first_btn_yellow
            background_color: first_band.yellow
            on_release: first_dropdown.select(4)
        DropButton:
            id: first_btn_green
            background_color: first_band.green
            on_release: first_dropdown.select(5)
        DropButton:
            id: first_btn_blue
            background_color: first_band.blue
            on_release: first_dropdown.select(6)
        DropButton:
            id: first_btn_violet
            background_color: first_band.violet
            on_release: first_dropdown.select(7)
        DropButton:
            id: first_btn_grey
            background_color: first_band.grey
            on_release: first_dropdown.select(8)
        DropButton:
            id: first_btn_white
            background_color: first_band.white
            on_release: first_dropdown.select(9)
