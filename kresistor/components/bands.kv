#:kivy 1.0.0

<ColorButton@Button>:
    background_normal: ''

<DropButton@ColorButton>:
    size_hint_y: None
    height: '48dp'

<FirstBand>:
    id: first_band
    ColorButton:
        id: btn
        background_color: first_band.brown
        on_release: first_dropdown.open(self)
    DropDown:
        id: first_dropdown
        on_select: btn.background_color = args[1]
        DropButton:
            id: btn_brown
            background_color: first_band.brown
            on_press: first_dropdown.select(self.background_color)
            on_release: first_band.change_value(1)
        DropButton:
            id: btn_blue
            background_color: first_band.red
            on_press: first_dropdown.select(self.background_color)
            on_release: first_band.change_value(2)
