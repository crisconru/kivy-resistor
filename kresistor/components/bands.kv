#:kivy 1.0.0
#:import colors kresistor.components.colors

<ColorButton@Button>:
    background_normal: ''

<DropButton@ColorButton>:
    size_hint_y: None
    height: '48dp'

<FirstBand>:
    # id: first_band
    ColorButton:
        id: first_btn
        on_release: first_dropdown.open(self)
    DropDown:
        id: first_dropdown
        on_select: root.change_value(args[1])
        DropButton:
            id: first_btn_brown
            background_color: colors['BROWN']
            on_release: first_dropdown.select(1)
        DropButton:
            id: first_btn_red
            background_color: colors['RED']
            on_release: first_dropdown.select(2)
        DropButton:
            id: first_btn_orange
            background_color: colors['ORANGE']
            on_release: first_dropdown.select(3)
        DropButton:
            id: first_btn_yellow
            background_color: colors['YELLOW']
            on_release: first_dropdown.select(4)
        DropButton:
            id: first_btn_green
            background_color: colors['GREEN']
            on_release: first_dropdown.select(5)
        DropButton:
            id: first_btn_blue
            background_color: colors['BLUE']
            on_release: first_dropdown.select(6)
        DropButton:
            id: first_btn_violet
            background_color: colors['VIOLET']
            on_release: first_dropdown.select(7)
        DropButton:
            id: first_btn_grey
            background_color: colors['GREY']
            on_release: first_dropdown.select(8)
        DropButton:
            id: first_btn_white
            background_color: colors['WHITE']
            on_release: first_dropdown.select(9)
